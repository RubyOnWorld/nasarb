#!/usr/bin/env ruby

begin
  require 'f90_mkdeps'
rescue LoadError
  require 'rubygems'
  require 'f90_mkdeps'
end

# FIXME: add CLI to set options

puts F90::MakeDeps.new.dependencies( ARGV.first )

